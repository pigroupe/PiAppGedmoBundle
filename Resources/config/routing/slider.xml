<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_gedmo_slider" path="/">
        <default key="_controller">PiAppGedmoBundle:Slider:index</default>
    </route>

    <route id="admin_gedmo_slider_show" path="/{id}/show">
        <default key="_controller">PiAppGedmoBundle:Slider:show</default>
    </route>

    <route id="admin_gedmo_slider_new" path="/new">
        <default key="_controller">PiAppGedmoBundle:Slider:new</default>
    </route>

    <route id="admin_gedmo_slider_create" path="/create" methods="POST">
        <default key="_controller">PiAppGedmoBundle:Slider:create</default>
    </route>

    <route id="admin_gedmo_slider_edit" path="/{id}/edit">
        <default key="_controller">PiAppGedmoBundle:Slider:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_gedmo_slider_update" path="/{id}/update" methods="POST">
        <default key="_controller">PiAppGedmoBundle:Slider:update</default>
    </route>

    <route id="admin_gedmo_slider_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">PiAppGedmoBundle:Slider:delete</default>
    </route>

</routes>
